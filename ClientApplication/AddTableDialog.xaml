        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="AddTableDialog" Height="144" Width="248">
    <Grid>
        <Button Content="Ok" HorizontalAlignment="Left" Margin="66,65,0,0" VerticalAlignment="Top" Height="24" Width="40" Click="Button_Add" IsDefault="True"/>
        <Button Content="Discard &#xD;&#xA;changes" HorizontalAlignment="Left" Margin="143,55,0,0" VerticalAlignment="Top" Height="44" Width="55" IsCancel="True" Click="Button_Click"/>
        <Label Content="Назва:" HorizontalAlignment="Left" Margin="28,24,0,0" VerticalAlignment="Top"/>
